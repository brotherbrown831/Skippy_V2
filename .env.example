# OpenAI (required)
OPENAI_API_KEY=sk-your-key-here

# Database (matches docker-compose postgres service)
DATABASE_URL=postgresql://skippy:skippy@postgres:5432/skippy

# General
# TIMEZONE=America/Chicago

# LLM model overrides
# LLM_MODEL=gpt-4o-mini
# EMBEDDING_MODEL=text-embedding-3-small

# Home Assistant
HA_URL=http://homeassistant.local:8123
HA_TOKEN=your-long-lived-access-token
# HA_NOTIFY_SERVICE=mobile_app_your_device

# Twilio SMS (optional)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=
# TWILIO_TO_NUMBER=

# Telegram (optional)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_ALLOWED_CHAT_IDS=
# TELEGRAM_NOTIFY_CHAT_IDS=
# TELEGRAM_POLL_INTERVAL=2
# TELEGRAM_LONG_POLL_TIMEOUT=20
# TELEGRAM_API_BASE=https://api.telegram.org

# Google Calendar (optional, requires service account)
# GOOGLE_CALENDAR_ID=your-email@gmail.com
# GOOGLE_SERVICE_ACCOUNT_JSON=credentials/google-sa.json

# Google OAuth2 â€” Gmail + Contacts (optional, run scripts/google_oauth.py first)
# GOOGLE_OAUTH_CLIENT_JSON=credentials/google-oauth.json
# GOOGLE_OAUTH_TOKEN_JSON=credentials/google-token.json

# Scheduler
# SCHEDULER_ENABLED=true
